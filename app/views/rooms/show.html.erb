<div class="container">
  <div class="row">
    <h2 class="well well-sm col-xs-3 text-center">チャット</h2>
  </div>
  <div id="messages" data-room_id="<%= @room.id %>">
    <%= render @messages %>
  </div>
    <%= text_field_tag :content, nil, :size=>"60" %>
    <%= hidden_field_tag :sent_user, (current_owner.present?) ? "owner" : "influencer", id: "sent_user" %>
    <%= button_tag "送信", id: "submit" %><br><br>
    <p><%= link_to "戻る", rooms_path, class: "btn btn-info" %></p>
</div>




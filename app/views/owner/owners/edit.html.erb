		<div class="container">
			<div class="row">
				<h2 class="well well-sm col-xs-3 text-center">マイページ編集</h2>
			</div>

			<div class="row">
				<%= form_for(@owner) do |f| %>
					<!-- エラーメッセージ表示-->
					<% if @owner.errors.any? %>
						<div id="error_explanation">
							<h3><%= @owner.errors.count %>error prohibited this obj from being saved:</h3>
							<ul>
								<% @owner.errors.full_messages.each do |message| %>
								<li><%= message %></li>
								<% end %>
							</ul>
						</div>
					<% end %>
					<!-- エラーメッセージ表示-->

					<div class="col-xs-4">
						<div class="item-image">
							<%= attachment_image_tag @owner, :profile_image, :fill, 60, 60, fallback: "no_img.jpg" %>
						<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
		  				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
		  			</div>
		  		</div>

					<div class="col-xs-8">
						<div class="form-group col-xs-9">
					    	<%= f.label :name, "会社or個人名", class: "col-xs-5" %>
					    	<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :kana_name, "会社or個人名(フリガナ)", class: "col-xs-5" %>
					    	<%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :prefectures, "都道府県", class: "col-xs-5" %>
					    	<%= f.text_field :prefectures, autofocus: true, autocomplete: "prefectures", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :industry, "業種", class: "col-xs-5" %>
					    	<%= f.text_field :industry, autofocus: true, autocomplete: "industry", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :account, "HP,SNSアカウント", class: "col-xs-5" %>
					    	<%= f.text_field :account, autofocus: true, autocomplete: "account", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :business_content, "事業内容", class: "col-xs-5" %>
					    	<%= f.text_area :business_content, autofocus: true, autocomplete: "business_content", class: "col-xs-6" %>
						</div>

					  <div class="form-group col-xs-9">
					  	<br>
					    <%= f.submit "変更を保存する", class: "btn btn-info" %>
					    <%= link_to "退会する", quit_owner_path(@owner.id), class: "btn btn-danger col-xs-offset-2" %>
					  </div>
					</div>
				<% end %>
				<%= link_to "マイページへ", owner_path(@owner.id), class: "btn btn-primary" %>
			</div>
		</div>
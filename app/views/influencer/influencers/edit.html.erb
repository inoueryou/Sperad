		<div class="container">
			<div class="row">
				<h2 class="well well-sm col-xs-3 text-center">マイページ編集</h2>
			</div>

			<div class="row">
				<%= form_for(@influencer) do |f| %>
					<!-- エラーメッセージ表示-->
					<% if @influencer.errors.any? %>
						<div id="error_explanation">
							<h3><%= @influencer.errors.count %>error prohibited this obj from being saved:</h3>
							<ul>
								<% @influencer.errors.full_messages.each do |message| %>
								<li><%= message %></li>
								<% end %>
							</ul>
						</div>
					<% end %>
					<!-- エラーメッセージ表示-->

					<div class="col-xs-4">
						<div class="item-image">
							<%= attachment_image_tag @influencer, :profile_image, :fill, 60, 60, class: "img-square", fallback: "no_img.jpg" %>
						<label class="control-label sr-only" for="inputEmail">ProfileImage</label>
		  				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
		  				</div>
		  			</div>

					<div class="col-xs-8">
						<div class="form-group col-xs-9">
					    	<%= f.label :name, "名前", class: "col-xs-4" %>
					    	<%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :kana_name, "名前(フリガナ)", class: "col-xs-4" %>
					    	<%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :prefectures, "都道府県", class: "col-xs-4" %>
					    	<%= f.text_field :prefectures, autofocus: true, autocomplete: "prefectures", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :sns_follower, "SNS総フォロワー", class: "col-xs-4" %>
					    	<%= f.text_field :sns_follower, autofocus: true, autocomplete: "sns_follower", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :account, "SNSアカウント", class: "col-xs-4" %>
					    	<%= f.text_field :account, autofocus: true, autocomplete: "account", class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :genre_id, "ジャンル", class: "col-xs-4" %>
					    	<%= f.collection_select :genre_id, Genre.all, :id, :name, class: "col-xs-6" %>
						</div>

						<div class="form-group col-xs-9">
					    	<%= f.label :enthusiasm, "意気込み", class: "col-xs-4" %>
					    	<%= f.text_area :enthusiasm, autofocus: true, autocomplete: "enthusiasm", class: "col-xs-6" %>
						</div>

					  <div class="form-group col-xs-9">
					  	<br>
					    <%= f.submit "変更を保存する", class: "btn btn-info" %>
					    <%= link_to "退会する", quit_influencer_path(@influencer.id), class: "btn btn-danger col-xs-offset-2" %>
					  </div>
					</div>
				<% end %>
				<%= link_to "戻る", influencer_path(@influencer.id), class: "btn btn-primary" %>
			</div>
		</div>

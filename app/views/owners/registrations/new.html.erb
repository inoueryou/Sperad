<div class="container">
      <div class="row">
          <p class="well well-sm col-xs-3 text-center">新規会員登録</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "influencers/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="field" style="padding-bottom: 8px;" >
            <br>
            <%= f.label :name, "名前", class: "col-xs-3" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-xs-offset-1" %>
          </div>
        </div>

        <div class="row">
          <div class="field" style="padding-bottom: 8px;">
            <%= f.label :kana_name, "名前(フリガナ)",class: "col-xs-3" %>
            <%= f.text_field :kana_name, autofocus: true, autocomplete: "kana_name", class: "col-xs-offset-1" %>
          </div>
        </div>

        <div class="row">
          <div class="field" style="padding-bottom: 8px;">
            <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-xs-offset-1" %>
          </div>
        </div>

        <div class="row">
          <div class="field" style="padding-bottom: 8px;">
            <div class="col-xs-3">
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class: "col-xs-offset-1" %>
          </div>
        </div>


        <div class="row">
          <div class="field" style="padding-bottom: 24px;">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-xs-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-xs-offset-1" %>
          </div>
        </div>

        <div class="row">
          <div class="actions text-center">
            <%= f.submit "新規登録", class: "btn btn-success", style: "padding: 6px 54px;" %>
          </div>
        </div>
      <% end %>

        <div class="row">
          <p class="well well-sm col-xs-3 text-center">既に登録済みの方</p>
        </div>

        <div class="row">
            <%= link_to "こちら", new_owner_session_path %><span>　からログインしてください。</span>
        </div>
    </div>
